<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.bible.bible_study_back.mapper.UserMapper">

    <!--User 조회-->
    <select id="getFindUser" resultType="com.bible.bible_study_back.dto.UserDto">
        select * from user_info where userId = #{userId};
    </select>

    <!--User 생성-->
    <insert id="createUser">
        insert into user_info(userName, userId, userBirth) values (#{user.userName}, #{user.userId}, #{user.userBirth});
    </insert>

    <!--User 찾기-->
    <select id="findUser" resultType="com.bible.bible_study_back.dto.UserDto">
        select * from user_info where userName = #{userName} and userBirth = #{userBirth};
    </select>

    <!--UserId 개수-->
    <select id="getUserCount" resultType="Integer">
        select count(*) from user_info;
    </select>

</mapper>